<% provide(:title, "Log in") %>
<div class="container login">
  <div class="panel shadow">
    <div class="panel-body">
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: 'form-control', placeholder: '这里输入用户名' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: 'form-control', placeholder: '这里输入密码' %>
        </div>
          <div class="action">
            <%= f.submit "登陆", class: "btn btn-success" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
