<% provide(:title, 'Books') %>
<div class="container-fluid panel books-panel">
  <div class="title">BOOKS</div>
  <div class="books-list">
    <% @books.each_with_index do |book, index| %>
        <% if (index + 1) % 3 == 1 %>
            <li>
        <% end %>
        <div class="book-block">
          <img src="<%= book.thumb %>">
          <h5 class="book-title">
            <a href="books/<%= book.slug %>" class="name"><%= book.title %></a>
          </h5>
          <div class="book_info">
            <%= book.info %>
          </div>
        </div>
        <% if (index+1)%3 == 0 %>
            </li>
        <% end %>
    <% end %>
  </div>

</div>
