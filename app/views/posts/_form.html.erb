<script>
  $('.container-fluid').css('padding-top', '0px');
</script>
<%= form_for(@post) do |f| %>
  <%= f.text_field :post_type, value: 'post', class: 'form-control', style: 'display: none' %>
  <div class="row row-ex">
    <div class="col-lg-12">
      <div class="title-tag">
        <%= f.text_field :tag_list, label: 'tags', class:'form-control', placeholder: "输入tags，用‘，’分开."  %>
        <%= f.text_field :title, class: 'form-control', placeholder: '在这里填写标题' %>
      </div>
    </div>
  </div>
  <div class="row row-ex">
    <div class="col-lg-12">
      <div class="info">
        <%= f.text_field :info, class: 'form-control', placeholder: '在这里填写简介' %>
      </div>
    </div>
  </div>
  <div class="row row-ex">
    <div class="col-lg-12">
      <%= f.text_area :body, hidden: 'hidden', id: 'content-textarea', name: 'hidden' %>
      <div class="editor">
      </div>
    </div>
  </div>
  <div class="actions actions-center">
    <%= f.submit "发布", class: 'btn'%>
  </div>
<% end %>
<script>
  Reditor.init($("#content-textarea").val(), 'post[body]');
</script>
