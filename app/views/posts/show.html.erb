<div class="container">
  <article class="panel shadow mgto20">
    <div class="panel-heading panel-heading-img">
      <div class="panel-title">
        <p class="headline">
          <a><%= @post.title %></a>
        </p>
      </div>
    </div>
    <div class="info">
      <!-- <time><%= @post.created_at.to_date %></time> -->
      <% if @post.tags.size > 0 %>
          <div class="tags pull-right">
            <% @post.tags.each do |tag| %>
                <span class="label label-success"><%= tag.name %></span>
            <% end %>
          </div>
      <% end %>
    </div>
    <div class="panel-body article-content">
      <%= markdown(@post.body) %>
    </div>
    <div class="panel-footer">
      <div id="disqus_thread"></div>
      <!-- <div class="actions actions-center">
        <% if logged_in? %>
            <%= link_to 'Edit', edit_post_path(@post), class: 'btn' %>
            <%= link_to 'Destroy', @post, class: 'btn', method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div> -->
    </div>
  </article>
    <script>
      var disqus_config = function () {
        this.page.url = "<%= post_url %>";
        this.page.identifier = "<%= @post.id %>";
      };

      (function() { // DON'T EDIT BELOW THIS LINE
        var d = document, s = d.createElement('script');
        s.src = 'https://ripdent.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
      })();
    </script>
</div>
