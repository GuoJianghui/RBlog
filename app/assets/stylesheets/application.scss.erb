@import "font-awesome-sprockets";
@import "font-awesome";

$color-black: #2a2730;
.panel {
  .panel-heading {
    .panel-title {
      .headline {
        margin-top: 8.5rem;
        a {
          color: white;
          font-weight: 400;
          font-size: 34px;
          line-height: 40px;
          text-shadow: 1px 1px 8px #444;
          &:hover {
            text-decoration: none;
          }
        }
      }
    }
  }
  .panel-body {
    .content {
      color: rgba(0,0,0,.54);
      font-size: 13px;
      line-height: 18px;
      overflow: hidden;
      margin-top: 15px;
    }
  }
  .panel-heading-img {
    height: 180px;
    background-size: cover;
    background-image: asset-url('material-5.png');
  }
}

.footer {
  height: 150px;
  color: white;
  background-color: rgba(0, 0, 0, 0.65);
  .container {
    height: 110px;
    .content {
      color: white;
      height: inherit;
      .contact {
        text-align: center;
        font-size: 24px;
        a {
          color: white;
          color: white;
          line-height: 9rem;
          margin: 0 20px;
          &:hover {
            text-decoration: none;
          }
        }
      }

    }
  }
  .copyright {
    height: 40px;
    background-color: #202020;
    background: #111;
    font-size: 13px;
    text-align: center;
    color: #555;
    padding-top: 14px;
    padding-bottom: 20px;
    border-top: 1px solid #303030;
  }

}
