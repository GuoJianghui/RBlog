.top {
  position: relative;
  background: rgba(255, 255, 255, 0.12);
  height: 12rem;
  .info {
    position: absolute;
    margin: auto;
    font-weight: 600;
    font-size: 1.3rem;
    background-color: rgba(0, 0, 0, 0.65);
    color: white;
    width: 120px;
    height: 120px;
    border-radius: 100px;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    // 文字居中
    line-height: 120px;
    text-align: center;
    font-style: italic;
  }
}
